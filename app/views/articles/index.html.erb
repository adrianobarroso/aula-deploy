<p id="notice"><%= notice %></p>

<h1>Articles</h1>
<img src="assets/995.WND.2017101618.png" alt="">

<%= image_tag "995.WND.2017101618.png" %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>

      <tr>
        <td>
          <%= link_to article do %>
            <%= article.title %>
            <div class="label label-primary">SHOW</div>
          <% end %>
        </td>
        <td><%= article.body %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: 'teste', id: "test" %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
